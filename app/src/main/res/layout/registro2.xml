<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/registro"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/contenedor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/paginaRegistro"
			android:layout_marginTop="0dp"
			android:layout_marginStart="0dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<View
				android:id="@+id/frame"
				android:background="@drawable/_bg__registro_ek2_shape"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:layout_width="match_parent"
				android:layout_height="823dp" />

			<View
				android:id="@+id/contenedorinfo"
				android:background="@drawable/contenedorinfo_shape"
				android:layout_marginStart="31dp"
				android:layout_marginTop="245dp"
				android:layout_width="match_parent"
				android:layout_height="554dp" />

			<ImageView
				android:id="@+id/fondologin"
				android:src="@drawable/fondologin"
				android:contentDescription="fondologin"
				android:layout_marginStart="-7dp"
				android:layout_marginTop="-100dp"
				android:layout_width="match_parent"
				android:layout_height="300dp" />

			<ImageView
				android:id="@+id/flechaatras"
				android:src="@drawable/flecharegreso"
				android:contentDescription="flecharegreso"
				android:layout_marginStart="19dp"
				android:layout_marginTop="17dp"
				android:layout_width="39dp"
				android:layout_height="46dp" />

			<ImageView
				android:id="@+id/logotipsinfondo"
				android:src="@drawable/logotipsinfondo"
				android:contentDescription="logotipsinfondo"
				android:layout_marginStart="119dp"
				android:layout_marginTop="193dp"
				android:layout_width="157dp"
				android:layout_height="98dp" />

			<ImageView
				android:id="@+id/iconosiguiente"
				android:src="@drawable/iconosiguiente"
				android:contentDescription="iconosiguiente"
				android:layout_marginStart="316dp"
				android:layout_marginTop="733dp"
				android:layout_width="26dp"
				android:layout_height="27dp" />

			<ImageView
				android:id="@+id/iconoatras"
				android:src="@drawable/iconoatras"
				android:contentDescription="iconoatras"
				android:layout_marginStart="66dp"
				android:layout_marginTop="733dp"
				android:layout_width="26dp"
				android:layout_height="27dp" />

			<Spinner
				android:id="@+id/comboboxEstado"
				android:layout_width="180dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="50dp"
				android:layout_marginTop="650dp"
				android:entries="@array/spinner_items"
				android:background="@drawable/spinner_background"
				android:popupBackground="#1b9c0c"
				android:theme="@style/SpinnerStyle" />

		</RelativeLayout>
	</RelativeLayout>

</ScrollView>
